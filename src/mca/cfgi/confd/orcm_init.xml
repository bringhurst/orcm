  <orcm:config xmlns:orcm="http://www.cisco.com/ns/orcm">
    <orcm:install>
      <orcm:app>
        <orcm:name>bgp</orcm:name>
        <orcm:exec>
          <orcm:exec-name>bgp</orcm:exec-name>
          <orcm:path>/bin</orcm:path>
          <orcm:default>
            <orcm:replicas>3</orcm:replicas>
            <orcm:local-max-restarts>3</orcm:local-max-restarts>
            <orcm:global-max-restarts>5</orcm:global-max-restarts>
          </orcm:default>
        </orcm:exec>
        <orcm:exec>
          <orcm:exec-name>bgp-shim</orcm:exec-name>
          <orcm:path>/bin</orcm:path>
          <orcm:default>
            <orcm:replicas>1</orcm:replicas>
            <orcm:local-max-restarts>0</orcm:local-max-restarts>
            <orcm:global-max-restarts>0</orcm:global-max-restarts>
          </orcm:default>
        </orcm:exec>
      </orcm:app>
      <orcm:app>
        <orcm:name>client-server</orcm:name>
        <orcm:exec>
          <orcm:exec-name>server</orcm:exec-name>
          <orcm:default>
            <orcm:replicas>1</orcm:replicas>
            <orcm:local-max-restarts>3</orcm:local-max-restarts>
            <orcm:global-max-restarts>5</orcm:global-max-restarts>
	  </orcm:default>
        </orcm:exec>
        <orcm:exec>
            <orcm:exec-name>client</orcm:exec-name>
            <orcm:default>
              <orcm:replicas>3</orcm:replicas>
              <orcm:local-max-restarts>3</orcm:local-max-restarts>
              <orcm:global-max-restarts>3</orcm:global-max-restarts>
	    </orcm:default>
          </orcm:exec>
      </orcm:app>
    </orcm:install>
  </orcm:config>
